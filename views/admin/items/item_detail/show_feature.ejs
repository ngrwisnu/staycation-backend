<div
  class="tab-pane fade show active"
  id="feature-list-tab-pane"
  role="tabpanel"
  aria-labelledby="feature-list-tab"
  tabindex="0"
>
  <!-- DataTales Example -->
  <div class="card shadow mt-4 mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/items/add/feature"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="modal-body">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  id="name"
                  placeholder="Name"
                />
              </div>
              <div class="mb-3">
                <label for="qty" class="form-label">Quantity</label>
                <input
                  type="number"
                  name="qty"
                  class="form-control"
                  id="qty"
                  placeholder="Enter the quantity"
                />
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input
                  type="file"
                  name="image"
                  class="form-control"
                  id="image"
                  placeholder="Choose image(s)"
                />
              </div>
              <div style="display: flex">
                <button type="submit" class="btn btn-primary">
                  Add to Database
                </button>
              </div>
              <input type="hidden" value="<%= itemId %>" name="itemId" />
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% feature.map((item, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= item.name %></td>
                  <td><%= item.qty %></td>
                  <td>
                    <img
                      src="http://localhost:3000/<%= item.imageUrl %>"
                      alt="<%= item.name %>"
                      height="30"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/feature/<%= item.id %>?_method=delete"
                      method="post"
                    >
                      <a
                        href="javascript:void()"
                        type="button"
                        class="button-update btn btn-warning btn-circle btn-sm"
                        data-id="<%= item._id %>"
                        data-name="<%= item.name %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
