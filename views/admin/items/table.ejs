<!-- DataTales Example -->
<div class="card shadow mt-4 mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No.</th>
            <th>Title</th>
            <th>City</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% item.map((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.title %></td>
            <td><%= item.city %></td>
            <td style="text-align: right">
              <%= new Intl.NumberFormat('id-ID').format(item.price) %>
            </td>
            <td>
              <form
                action="/admin/items/<%= item.id %>?_method=delete"
                method="post"
              >
                <a
                  href="/admin/items/show-image/<%= item.id %>"
                  class="btn btn-info btn-circle btn-sm"
                  ><i class="fas fa-image"></i
                ></a>
                <a
                  href="/admin/items/<%= item.id %>"
                  type="button"
                  class="button-update btn btn-warning btn-circle btn-sm"
                  data-id="<%= item._id %>"
                  ><i class="fas fa-edit"></i
                ></a>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
                <a href="#" class="btn btn-success btn-circle btn-sm"
                  ><i class="fas fa-plus"></i
                ></a>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
