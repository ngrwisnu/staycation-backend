<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No.</th>
            <th>Invoice</th>
            <th>Dates</th>
            <th>Title</th>
            <th>Customer Name</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% booking.map((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>#<%= item.invoice %></td>
            <td>
              <%= item.startDate.toLocaleString().split(',')[0] %> - <%=
              item.endDate.toLocaleString().split(',')[0] %>
            </td>
            <td><%= item.itemId.title %></td>
            <td>
              <%= item.memberId.firstName + ' ' + item.memberId.lastName %>
            </td>
            <td><%= item.payments.status %></td>

            <td>
              <a
                href="/admin/booking/<%= item.id %>"
                class="button-update btn btn-info btn-circle btn-sm"
                style="
                  display: flex;
                  justify-content: center;
                  align-items: center;
                "
                ><i class="fas fa-eye"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
